<% if logged_in? and (current_user==@food.creator or current_user.admin?) %>
  <p class='pull-right'>
    <%= link_to( edit_food_path(@food) ) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to( food_path(@food), method: :delete, data: {confirm: "Sure you want to delete this food?"} ) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </p>
<% end %>

<%= render 'food', food: @food %>

<% if logged_in? %>
  <%= render 'shared/errors', model_obj: @comment %>
  <%= form_for [@food, @comment] do |f| %>
    <strong><%= f.label :body, "New Comment:" %></strong>
    <br/>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
    <br/>
    <%= f.hidden_field :class_name, value: 'Food'  %>
    <%= f.submit 'Add', class: 'btn btn-small btn-primary' %>
  <% end %>
<% end %>

<h4>Comments:</h4>
<%= render 'comments', comments: @food.comments %>
