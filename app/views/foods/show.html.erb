<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to @food.name, food_path(@food) %>
      <% if logged_in? and (current_user==@food.creator or current_user.admin?) %>
        <div class='pull-right'>
          <%= link_to( edit_food_path(@food) ) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>&nbsp;
          <%= link_to( food_path(@food), method: :delete, data: {confirm: "Sure you want to delete this food?"} ) do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </div>
      <% end %>
    </h3>
  </div>
  <div class='panel-body'>
    <p>Nutrition Information:</p>
    <table class="table">
      <tbody>
        <tr>
          <td>Energy</td>
          <td><%= @food.energy %></td>
          <td>Kcal/serving</td>
        </tr>
        <tr>
          <td>Fat</td>
          <td><%= @food.fat %></td>
          <td>grams/serving</td>
        </tr>
        <tr>
          <td>Protein</td>
          <td><%= @food.protein %></td>
          <td>grams/serving</td>
        </tr>
        <tr>
          <td>Note</td>
          <td colspan='2'><%= @food.notes %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <p>
      <%= render 'shared/footer', item: @food %>
    </p>
    <div id='food_<%= @food.slug %>_votebox'>
      <% if logged_in? %>
        <span id='voteup'><%= link_based_on_current_users_vote_on_food(@food, true) %></span>
        <span id='votedown'><%= link_based_on_current_users_vote_on_food(@food, false) %></span>
      <% end %>
      <span id='votes'><%= "<strong>#{@food.total_votes}</strong> <small>(#{pluralize(@food.votes.size, "Vote")})</small>".html_safe %></span>
    </div>
  </div>
</div>

<% if logged_in? %>
  <%= render 'shared/errors', model_obj: @comment %>
  <%= form_for [@food, @comment] do |f| %>
    <strong><%= f.label :body, "New Comment:" %></strong>
    <br/>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
    <br/>
    <%= f.hidden_field :class_name, value: 'Food'  %>
    <%= f.submit 'Add', class: 'btn btn-small btn-primary' %>
  <% end %>
<% end %>

<h4>Comments:</h4>
<%= render 'comments', comments: @food.comments %>
