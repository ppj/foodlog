<%= render 'shared/title', title: "Recently Added Foods" %>

<% @foods.each do |food| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="panel-title"><%= link_to "#{food.name}: [Energy: #{food.energy} KCal/serve; Fat: #{food.fat} gm/serve; Protein: #{food.protein} gm/serve]", food_path(food) %>
        <% if logged_in? and (current_user==food.creator or current_user.admin?) %>
          <div class='pull-right'>
            <%= link_to( edit_food_path(food) ) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>&nbsp;
            <%= link_to( food_path(food), method: :delete, data: {confirm: "Sure you want to delete this food?"} ) do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="panel-footer">
      <p>
        <%= render 'shared/footer', item: food %>
      </p>
      <div id='food_<%= food.slug %>_votebox'>
        <% if logged_in? %>
          <span id='voteup'><%= link_based_on_current_users_vote_on_food(food, true) %></span>
          <span id='votedown'><%= link_based_on_current_users_vote_on_food(food, false) %></span>
        <% end %>
        <span id='votes'><%= "<strong>#{food.total_votes}</strong> <small>(#{pluralize(food.votes.size, "Vote")})</small>".html_safe %></span>
      </div>
    </div>
  </div>
<% end %>

<%= link_to new_food_path do %>
  <% button_tag 'Add New Food', class: 'btn btn-success' %>
<% end %>
