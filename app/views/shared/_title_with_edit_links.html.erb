<% if logged_in? %>
  <div class='lead pull-right'>
    <%= link_to( args[:show_path], method: :delete, data: {confirm: "Sure you want to delete this?"} ) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </div>
<% end %>
<%= render 'shared/title', title: "#{args[:title]}&nbsp;&nbsp;&nbsp;#{edit_link args[:edit_path]}".html_safe %>
