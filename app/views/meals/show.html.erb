<% if logged_in? and (current_user==@meal.creator or current_user.admin?) %>
  <p class='pull-right'>
    <%= link_to( edit_meal_path(@meal) ) do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <% end %>
    <%= link_to( meal_path(@meal), method: :delete, data: {confirm: "Sure you want to delete this meal?"} ) do %>
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    <% end %>
  </p>
<% end %>

<%= render 'shared/title', title: @meal.title %>

<p>
  <span class='badge'><%= @meal.category %></span>
</p>

<p><%= @meal.description %></p>
<hr/>

<p>
  <%= render 'shared/footer', item: @meal %>
</p>
<%= render 'voting', obj: @meal %>
<hr>
<p><%= link_to 'Back', meals_path %></p>

<% if logged_in? %>
  <%= render 'shared/errors', model_obj: @comment %>
  <%= form_for [@meal, @comment] do |f| %>
    <strong><%= f.label :body, "New Comment:" %></strong>
    <br/>
    <%= f.text_area :body, rows: 3, class: 'span4' %>
    <br/>
    <%= f.hidden_field :class_name, value: 'Meal'  %>
    <%= f.submit 'Add', class: 'btn btn-small btn-primary' %>
  <% end %>
<% end %>

<h4>Comments:</h4>
<%= render 'comments', comments: @meal.comments %>
