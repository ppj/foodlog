<%= render 'shared/title', title: 'Login' %>

<div class='well'>
  <%= form_tag '/login', class: 'form-horizontal', role: 'form' do %>
    <div class='form-group'>
      <%= label_tag :username, 'Username', class: 'col-sm-2 control-label' %>
      <div class='col-sm-3'>
        <%= text_field_tag :username, params[:username] || '', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= label_tag :password, 'Password', class: 'col-sm-2 control-label' %>
      <div class='col-sm-3'>
        <%= password_field_tag :password, params[:password] || '', class: 'form-control' %>
      </div>
    </div>
    <div class='col-sm-offset-2 col-sm-3'>
      <%= submit_tag "Login", class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
